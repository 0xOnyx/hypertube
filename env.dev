# Environnement de développement Hypertube
NODE_ENV=development
SPRING_PROFILES_ACTIVE=docker

# Base de données PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hypertube
POSTGRES_USER=hypertube_user
POSTGRES_PASSWORD=hypertube_password
POSTGRES_URL=jdbc:postgresql://postgres:5432/hypertube

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# URLs des services
FRONTEND_URL=http://localhost:4200
AUTH_BASE_URL=https://hypertube.com:8443/api/auth
EUREKA_SERVER_URL=http://eureka-server:8761/eureka

# JWT (clé minimum 32 caractères pour 256 bits)
JWT_SECRET=dev-jwt-secret-key-hypertube-development-environment-secure-256-bits
JWT_EXPIRATION=86400

# OAuth2 (remplacez par vos vraies clés pour les tests)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
SCHOOL42_CLIENT_ID=your-42-client-id
SCHOOL42_CLIENT_SECRET=your-42-client-secret

# Email (pour les tests, utilisez MailHog ou un service de test)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@hypertube.com

# Torrents et vidéos
TORRENT_DOWNLOAD_PATH=/app/videos
VIDEO_STORAGE_PATH=/app/videos
MAX_DOWNLOAD_SIZE_GB=50

# Logging
LOG_LEVEL=debug
LOG_FILE=/app/logs/hypertube.log

# Hot reload et développement
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true
NG_CLI_ANALYTICS=false 