# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/hypertube
SPRING_DATASOURCE_USERNAME=hypertube_user
SPRING_DATASOURCE_PASSWORD=hypertube_password

# Redis Configuration
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8081

# Frontend URL
FRONTEND_URL=https://hypertube.com:8443

# Auth Service Base URL (IMPORTANT: This should be the public URL)
AUTH_BASE_URL=https://hypertube.com:8443/api/auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=2592000000

# OAuth2 Providers Configuration
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 42 OAuth2
FORTYTWO_CLIENT_ID=your-42-client-id
FORTYTWO_CLIENT_SECRET=your-42-client-secret

# Email Configuration (optional)
EMAIL_VERIFICATION_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# Eureka Configuration
EUREKA_SERVER_URL=http://eureka-server:8761/eureka
EUREKA_REGISTER=true
EUREKA_FETCH=true 